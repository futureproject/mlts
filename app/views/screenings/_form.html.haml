= form_for @screening do |f|
  - if @screening.errors.any?
    #error_explanation
      %h2= "#{pluralize(@screening.errors.count, "error")} prohibited this screening from being saved:"
      %ul
        - @screening.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :screening_time
    = f.datetime_select :screening_time
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :country
    = f.text_field :country
  .field
    = f.label :link
    = f.text_field :link
  .field
    = f.label :venue_name
    = f.text_field :venue_name
  .field
    = f.label :street_address
    = f.text_field :street_address
  .actions
    = f.submit 'Save'
