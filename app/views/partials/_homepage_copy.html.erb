    <span id="quotes" class="copy-social-icons">
      <a href="https://www.facebook.com/MLTSfilm/" target="blank" class="icon icon-facebook"></a>
      <a href="https://twitter.com/mltsfilm" target="blank" class="icon icon-twitter"></a>
      <a href="https://www.youtube.com/channel/UCnkPlILzmiAkaTjgdOmeBSg" target="blank" class="icon icon-youtube"></a>
      <a href="https://www.instagram.com/mltsfilm/" target="blank" class="icon icon-instagram"></a>
    </span>
  </div>

  <% cache @quotes do %>
  <!-- Carousel -->
  <div class="quote-carousel-wrapper">
    <div id="hero-quote-carousel" class="carousel slide carousel-fade header-reviews">
      <!-- Wrapper for slides -->
      <div class="carousel-inner" role="listbox">
        <% @quotes.each_with_index do |quote, i| %>
          <div class="<%= i==0 ? "item active" : "item review-carousel-row js-item#{i}" %>">
            <ul>
              <% quote.each do |quote| %>
              <li class="review-item">
                <% if quote.link? %><a href=<%= quote.link %>><% end %>
                  <blockquote><%= quote.quote_text %></blockquote>
                  <p class="quote-author"><%= quote.author %></p>
                <% if quote.link? %></a><% end %>
              </li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </div>
      <!-- Controls -->
      <a class="left carousel-control hero-control" href="#hero-quote-carousel" role="button" data-slide="prev">
          <span class="icon icon-next-left" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control hero-control" href="#hero-quote-carousel" role="button" data-slide="next">
          <span class="icon icon-next-right" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
      </a>
      </div>
    </div>
    <!-- end of Carousel -->
  <% end %>

</section>
<!-- End of Copy Container -->

