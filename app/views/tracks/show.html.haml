%section.playlist-container
  .playlist-chapter-wrapper
    .playlist-chapter-header
      %h4.playlist-caps-text Innovation Playlist
      %h1.playlist-chapter-title= @track.title
      %p= @track.description
      = render "partials/playlist_top_buttons"

    .playlist-tab-container
      .playlist-tab.playlist-tab-watch.selected{style: "border: 1px solid #{@color}"}
        %img{src: "/icons/watch.png", style: "color: #{@color}"}
        %p{style: "color:#{@color}"}= @track.video_title
      - unless @track.audio_embed.empty?
        .playlist-tab.playlist-tab-listen{style: "border: 1px solid #{@color}"}
          %img{src: "/icons/listen.png"}
          %p{style: "color:#{@color}"}= @track.audio_title
      .playlist-tab.playlist-tab-act{style: "border: 1px solid #{@color}"}
        %img{src: "/icons/act.png"}
        %p{style: "color:#{@color}"} Take Action

    .playlist-content-container
      .playlist-content.playlist-content-watch
        = render "partials/embedded_vimeo_player", vimeo_id: @track.video_embed
        %h2= @track.video_title
        %p= @track.video_description

      .playlist-content.playlist-content-listen
        = render "partials/embedded_bandcamp_player", track_id: @track.audio_embed
        %h2= @track.audio_title
        %p= @track.audio_description

      .playlist-content.playlist-content-act
        %h2 Take Action
        = @track.take_action_text

    %br


.playlist-transport-container
  .playlist-transport-item
    - if @previous_track
      %a{href: track_path(@previous_track, location: @location)}
        %p Previous
        %p= @previous_track.title

  .playlist-transport-item
    %a{href: tracks_path(location: @location)}
      %p View All Chapters

  .playlist-transport-item
    - if @next_track
      %a{href: track_path(@next_track, location: @location)}
        %p Next
        %p= @next_track.title
